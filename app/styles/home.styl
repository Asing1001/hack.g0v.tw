.home
  padding: 0
  margin-top: -2em
  font-family: "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif
  font-size: 16px
  line-height: 1.5
  color: #606c71
  height: 15%

  .project-name 
      font-size: 3.25rem; 


  .page-header
    color: #fff
    text-align: center
    background-color: #159957
    background-image: linear-gradient(120deg, #155799, #159957)
    padding: 7em
    height: 100%
    h2
      margin: 1.5em
    a
      color: #1e6bb8
      text-decoration: none
      &:hover
        text-decoration: underline
    h3
      margin: 1.5em
      color: #EFF6F5
      font-size: 20px
      font-weight: normal
    .btn
      display: inline-block
      margin-bottom: 1rem
      color: rgba(255, 255, 255, 0.7)
      background-color: rgba(255, 255, 255, 0.08)
      border-color: rgba(255, 255, 255, 0.2)
      border-style: solid
      border-width: 1px
      border-radius: 0.3rem
      width: 130px
      transition: color 0.2s, background-color 0.2s, border-color 0.2s
      background-image: none
      & + .btn
        margin-left: 1rem

      &:hover
        color: rgba(255, 255, 255, 0.8)
        text-decoration: none
        background-color: rgba(255, 255, 255, 0.2)
        border-color: rgba(255, 255, 255, 0.3)


  .main-content
      margin-left: 20%
      margin-right: 20%
      margin-bottom: 5%
      margin-top:1%
      font-size: 18px
    p
      line-height: 200%

  .site-footer 
      padding-top: 2rem
      margin-top: 2rem
      border-top: solid 5px #eff0f1
      font-size: 16px
      line-height: 1.5


  .site-footer-credits 
      color: #819198